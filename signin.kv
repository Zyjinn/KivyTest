# START, Actual Login UI
<SigninWindow>:
    id: main_widget
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3

    # draw a rectangle(Background)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    # Header bar
    BoxLayout:
        size_hint_y: None
        height: 50
        # Header background
        canvas.before:
            Color:
                rgba: (0.06, .75, .46, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        # Header text
        Label:
            text: "User Login"
            bold: True
            size_hint_x: .9 # how much size widget takes up, 90% in this case 
    
        # Exit the application
        FlatButton:
            text: "x"
            size_hint_x: .1
            background_color: (0.157, 0.455, 0.753, 1.0)
            on_press: root.createPopup()
    BoxLayout:
        orientation: "vertical"
        padding: main_widget.space_x, 10
        spacing: 10

        # Error messages displayed here!
        Label:
            id: info
            text: ""
            markup: True
            size_hint_y: None
            height: 20

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 80

            # Get username/password
            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                write_tab: False
                focus: True
                on_text_validate: pwd_field.focus = True

            TextInput:
                id: password_field
                hint_text: "Password"
                multiline: False
                write_tab: False
                on_text_validate: root.validate_user()
                password: True


        
        # Additional Spacing
        Label:
            id: sp
            size_hint_y: None
            height: 40

        # Submit button
        SmoothButton:
            text: "Sign In"
            back_color: (0.06, .75, .46, 1)
            on_release: root.validate_user()
            
        # Additional spacing
        Label: 
            id: sp2

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: .15
        size_hint_x: .15

        # Kivy doodoo
        SmoothButton:
            id: "kivy Doodoo"
            text: "Kivy Doodoo"
            halign: "left"
            back_color: (0.06, .75, .46, 1)
            on_press: root.createPopup()
    BoxLayout:
        orientation: "vertical"
        size_hint_y: .1
        Button:
            id: "border"
            text: ""
            background_color: (0.06, .75, .46, 1)
            background_normal: ""

