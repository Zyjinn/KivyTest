# Button, inherit from button Behavior
<FlatButton@ButtonBehavior+Label>:
    font_size: 16

# Popup class import
<MyPopup@Popup>:
    auto_dismiss: False
    Button:
        text: "Close"
        on_release: root.dismiss()

# Create a smooth button
<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle
            size: self.size
            pos: self.pos
            radius: self.border_radius

